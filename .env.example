# Railway OR-Tools VRP API - Environment Variables

# Server Configuration
PORT=8080
LOG_LEVEL=info
WORKERS=1

# OR-Tools Default Configuration
DEFAULT_TIME_LIMIT_SECONDS=45
DEFAULT_SEARCH_STRATEGY=SAVINGS
DEFAULT_USE_LOCAL_SEARCH=true
DEFAULT_ENABLE_TIME_WINDOWS=false

# CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS=*

# Optional: Custom cache size for distance calculations
DISTANCE_CACHE_SIZE=2048

# Optional: Performance tuning
MAX_CUSTOMERS_PER_REQUEST=100
REQUEST_TIMEOUT_SECONDS=120
